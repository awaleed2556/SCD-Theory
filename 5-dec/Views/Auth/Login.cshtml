@model Technova_ecom.Models.Entities.User
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-action="Login" method="post">
    <div class="form-group mb-3">
        <label asp-for="UserName">Username</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="HashedPassword">Password</label>
        <input asp-for="HashedPassword" type="password" class="form-control" />
        <span asp-validation-for="HashedPassword" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Login</button>
</form>
